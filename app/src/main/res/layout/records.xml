<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/five_dp"
        android:layout_marginBottom="@dimen/five_dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_records_profile_image"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:cardCornerRadius="@dimen/fifty_dp"

            android:layout_alignParentStart="true"

            android:layout_marginStart="@dimen/twenty_dp"
            >

            <ImageView
                android:id="@+id/profileImage_records"

                android:contentDescription="@string/content_dis"

                android:layout_width="@dimen/forty_dp"
                android:layout_height="@dimen/forty_dp"

                android:background="@android:color/black"

                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/l1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"

            android:layout_centerVertical="true"

            android:layout_marginStart="@dimen/ten_dp"

            android:layout_toEndOf="@+id/card_view_records_profile_image"
            tools:ignore="RelativeOverlap">

            <TextView
                android:id="@+id/name_records"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="15sp"
                android:textStyle="bold"

                android:layout_marginBottom="@dimen/two_dp"
                />

            <TextView
                android:id="@+id/date_records"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="10sp"

                android:layout_marginTop="@dimen/two_dp"
                tools:ignore="SmallSp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"

            android:layout_centerVertical="true"

            tools:ignore="RelativeOverlap,UseCompoundDrawables">

            <TextView
                android:id="@+id/amount_records"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:textStyle="bold"

                android:layout_gravity="center"
                android:paddingStart="@dimen/five_dp"
                android:paddingEnd="@dimen/five_dp"

                />

            <ImageView
                android:id="@+id/credit_or_debit_records"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/c"

                android:layout_marginTop="@dimen/two_dp"
                android:layout_marginEnd="@dimen/ten_dp"

                android:layout_gravity="center"
                android:contentDescription="@string/content_dis" />


        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>